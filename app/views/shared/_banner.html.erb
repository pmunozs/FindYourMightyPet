<div class="container py-5">
  <div class="row">
    <h3 class="text-center">Latest creatures</h3>
    <div class="col-sm col-4 d-flex justify-content-between">
        <% @creatures.last(3).each do |creature| %>
          <%= link_to creature_path(creature), class:"link" do %>
            <div class="creature-card">
              <%= cl_image_tag creature.photo.key, height: 400, width: 400, class: 'card-img-top', crop: :fill %>
              <div class="card-body">
                <div class="creature-description name">
                  <%= creature.name %>
                </div>
                <div class="creature-description age">
                  <strong>Age: </strong><%= creature.age %> years
                </div>
                <div class="creature-description ability">
                  <strong>Ability: </strong><%= creature.ability %>
                </div>
              </div>
              <div class="card-footer">
                <div class="creature-description">
                  <%= creature.description %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
