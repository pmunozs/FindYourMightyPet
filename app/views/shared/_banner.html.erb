<div class="container mt-4">
  <div class="row">
    <div class="col-sm col-4 d-flex justify-content-between">
        <% @creatures.first(3).each do |creature| %>
            <div class="card m-4 w-100">
                <img class="card-img-top" src="https://images4.fanpop.com/image/photos/20500000/DraGon-dragons-20577400-984-689.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= creature.name %>
                    </h5>                    
                    <p class="card-text">
                        <%= creature.age %>
                    </p>
                    <p class="card-text">
                        <%= creature.ability %>
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        <%= creature.description %>
                    </small>                
                </div>
            </div>      
        <% end %>
    </div>
  </div>
</div>
