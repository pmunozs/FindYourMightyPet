<div class="row align-items-center w-100">
  <div class="col-4">
    <div class="image-wrapper">
      <img src="https://source.unsplash.com/500x500/?<%= @creature.name %>, scary" alt="Card image cap" width="500" />
    </div>
  </div>
  <div class="col-8">
    <div class="creature-wrapper">
      <h2><%=@creature.name %></h2>
      <p><strong>Age: </strong><%= @creature.age %></p>
      <p><strong>Ability: </strong><%= @creature.ability %></p>
      <p><%= @creature.description %></p>
      <% if @creature.adopted%> 
        <%=link_to "Unadopt", creature_path(@creature), class: "btn-themed-orange", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@creature.name}?" } %>
      <% else %>
        <%=link_to (@creature.adopted ? "Adopted" : "Adopt"), creature_adopt_path(@creature), class: "btn-themed-orange" %>
        <% if @creature.user == current_user %>
          <%= link_to "Edit", edit_creature_path(@creature), class: "btn-themed-orange" %>
          <%= link_to "Release", creature_path(@creature), class: "btn-themed-orange", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
        <% end %>
      <% end %>
      <%= link_to "Back", creatures_path, class: "btn-themed-blue" %>
    </div>
  </div>
</div>
