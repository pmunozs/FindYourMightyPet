<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Adopt a mighty creature</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Mighty creatures</h3>
    <%= link_to "Add a creature", new_creature_path, class: "btn btn-flat" %>
  </div>
  <div class="row">

    <div class="col-sm col-4">
        <div class="card">
            <% @creatures.each do |creature| %>
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= creature.name %>
                    </h5>                    
                    <p class="card-text">
                        <%= creature.age %>
                    </p>
                    <p class="card-text">
                        <%= creature.ability %>
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        <%= creature.description %>
                    </small>                
                </div>
            <% end %>
        </div>      
  </div>
</div>