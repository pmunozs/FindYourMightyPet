<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div>
    <h1>Adopt a mighty creature</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="text-container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1>Current creatures</h1>
    <%= link_to "Add a creature", new_creature_path, class: "btn-themed-orange" %>
  </div>
  <div class="row">
    <div class="col index-col">
      <% @creatures.each do |creature| %>
        <%= link_to creature_path(creature), class:"link" do %>
          <div class="creature-card">
            <img class="card-img-top" src="https://source.unsplash.com/400x400/?<%= creature.name %>, scary" alt="Card image cap">
            <div class="card-body">
              <div class="creature-description name">
                <%= creature.name %>
              </div>
              <div class="creature-description age">
                <strong>Age: </strong><%= creature.age %> years
              </div>
              <div class="creature-description ability">
                <strong>Ability: </strong><%= creature.ability %>
              </div>
            </div>

            <div class="card-footer">
              <div class="creature-description">
                <%= creature.description %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
